{
  // Required
  "manifest_version": 2,
  "name": "Netflix Controller",
  "version": "0.0.1",

  // Recommended
  "description": "Control Netflix from any Chrome browser",

  // Optional
  "author": "Nik White",
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": [
        "socket.io-1.3.5.js", 
        "jquery-2.1.3.js", 
        "netflix-controller.js"
      ],
      "css": [
        "netflix-controller.css"
      ]
    }
  ],
  "offline_enabled": true,
  "permissions": ["tabs"]
}